<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admins/<%=idAdmin%>">Admin Panel</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                class="nav-link"
                href="/admins/<%=idAdmin%>/organisation-registration-requests/onhold"
                >Manage Organisations</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/admins/<%=idAdmin%>/recruiter-registration-requests/onhold"
                >Manage Recruiters</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admins/<%=idAdmin%>/users"
                >Manage Users</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/admins/<%=idAdmin%>/organisation-registration-requests/history"
                >Organisation History</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/admins/<%=idAdmin%>/manage-recruiter/history"
                >Recruiter History</a
              >
            </li>
          </ul>
          <a class="btn btn-danger d-flex ms-auto" href="/logout">
            Log Out
          </a>
        </div>
      </div>
    </nav>

    <div class="container mt-5 min-vh-100">
      <form action="" method="get">
      <div class="input-group mb-3">

        <input
                name="search"
          type="text"
          class="form-control"
          placeholder="Search by First or Last Name"
          aria-label="Search"
          aria-describedby="button-addon2"
        />
        <button
          class="btn btn-outline-secondary"
          type="submit"
          id="button-addon2"
        >
          Search
        </button>

      </div>
      </form>

    <%if (users.length > 0) {%>
      <div class="row justify-content-center">
  <div class="col-md-6">
    <% users.forEach((user) => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= user.firstname %> <%= user.lastname %>
        </h5>
        <p class="card-text"><strong>Email : </strong><%= user.email %></p>
        <p class="card-text">
          <strong>Phone number : </strong><%= user.phonenumber %>
        </p>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Modify</button>
          <% if (!user.iduser) { %>
          <form
            action="/admins/<%= idAdmin %>/give-admin-rights/<%= user.userid %>"
            method="POST"
            class="d-flex"
          >
            <button type="submit" class="btn btn-danger">Give Admin Rights</button>
          </form>
          <% } %>
          <form
            action="/admins/<%= idAdmin %>/delete-users/<%= user.userid %>"
            method="POST"
            class="d-flex"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<% } else { %>
  <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="alert alert-danger" role="alert">
        No user to manage !
      </div>
    </div>
    <% } %>

  </body>
</html>
