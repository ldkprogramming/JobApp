<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page</title>
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
            rel="stylesheet"
    />
    <style>
        .card {
            margin-bottom: 20px;
        }

        .drop-zone {
            border: 2px dashed #ccc;
            border-radius: 10px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
        }

        .drop-zone:hover {
            border-color: #007bff;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="home_user.html">User Panel</a>
        <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="offers.html">Offers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="history.html">History</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="become_recruiter.html"
                    >Become Recruiter</a
                    >
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-3">
                <div class="input-group">
                    <button
                            class="btn btn-outline-secondary"
                            type="button"
                            id="sortByName"
                    >
                        Sort by Name
                    </button>
                    <button
                            class="btn btn-outline-secondary"
                            type="button"
                            id="sortByDate"
                    >
                        Sort by Date
                    </button>
                    <input
                            type="text"
                            class="form-control"
                            placeholder="Search offers..."
                            aria-label="Search offers"
                            aria-describedby="button-addon2"
                    />
                    <button class="btn btn-primary" type="button" id="searchButton">
                        Search
                    </button>
                </div>
            </div>

            <div class="list-group">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <% offers.forEach((offer)=> { %>
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"><%=offer.title%></h5>
                                        <h6 class="card-subtitle mb-2 text-muted"><%=offer.deadline%>></h6>
                                        <p class="card-text"><%=offer.name%></p>
                                        <p class="card-text"><%=offer.description%>></p>
                                        <div class="drop-zone mt-3">
                                            <p>Drag & Drop files here</p>
                                            <p>or</p>
                                            <p><input type="file" multiple="multiple" accept=".pdf,.doc,.docx,.txt"></p>
                                        </div>
                                        <button type="button" class="btn btn-success">Apply</button>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 text-center">
                <button class="btn btn-outline-primary" type="button">
                    &#8592; Previous Page
                </button>
                <button class="btn btn-outline-primary" type="button">
                    Next Page &#8594;
                </button>
            </div>
        </div>
    </div>
</div>
</body>
</html>