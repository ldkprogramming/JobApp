<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Posting Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/recruiters/<%=idRecruiter%>"
          >Recruiter Panel</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                class="nav-link"
                href="/recruiters/<%=idRecruiter%>/job-offers/history"
                >Manage Offers</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/recruiters/<%=idRecruiter%>/jobDescription-registration-request"
                >Add Organisation</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/recruiters/<%=idRecruiter%>/join-jobDescription"
                >Join Organisation</a
              >
            </li>
            <li class="nav-item">
              <a
                href="/recruiters/<%=idRecruiter%>/create-job-description"
                class="nav-link"
                >Create Job Description</a
              >
            </li>
            <li class="nav-item">
              <a
                href="/recruiters/<%=idRecruiter%>/create-job-offer"
                class="nav-link"
                >Create Job Offer</a
              >
            </li>
          </ul>
          <a class="btn btn-danger d-flex ms-auto" href="/logout"> Log Out </a>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Job Offer</h5>
              <form
                method="post"
                action="/recruiters/<%=idRecruiter%>/create-job-offer"
              >
                <div class="mb-3">
                  <label for="deadline" class="form-label">deadline</label>
                  <input
                    type="date"
                    class="form-control"
                    id="deadline"
                    name="deadline"
                    placeholder="Enter deadline"
                  />
                </div>
                <div class="mb-3">
                  <label for="indication" class="form-label">Indication</label>
                  <input
                    type="text"
                    class="form-control"
                    id="indication"
                    name="indication"
                    placeholder="Enter job indication"
                  />
                </div>
                <div class="mb-3">
                  <label for="numberofattachments" class="form-label"
                    >Number of attachements</label
                  >
                  <input
                    type="number"
                    class="form-control"
                    id="numberofattachments"
                    name="numberofattachments"
                    placeholder="Enter number of attachments"
                  />
                </div>

                <div class="mb-3">
                  <label for="idjobdescription" class="form-label"
                    >Select Job Description</label
                  >
                  <select
                    name="idjobdescription"
                    id="idjobdescription"
                    class="form-select"
                    aria-label="Default select example"
                  >
                    <% jobDescriptions.forEach((jobDescription) => { %>
                    <option value="<%= jobDescription.id %>">
                      <%= jobDescription.title %>
                    </option>

                    <% }) %>
                  </select>
                </div>

                <button type="submit" class="btn btn-primary">
                  Submit Job Description
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
