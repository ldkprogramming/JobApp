<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Join Organisation</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/recruiters/<%=idRecruiter%>">Recruiter Panel</a>
      <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/recruiters/<%=idRecruiter%>/job-offers/history">Manage Offers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recruiters/<%=idRecruiter%>/organisation-registration-request"
            >Add Organisation</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recruiters/<%=idRecruiter%>/join-organisation"
            >Join Organisation</a
            >
          </li>
          <li class="nav-item">
            <a href="/recruiters/<%=idRecruiter%>/create-job-description" class="nav-link">Create Job Description</a>
          </li>
          <li class="nav-item">
            <a href="/recruiters/<%=idRecruiter%>/create-job-offer" class="nav-link">Create Job Offer</a>
          </li>

        </ul>
        <a class="btn btn-danger d-flex ms-auto" href="/logout">
          Log Out
        </a>
      </div>
    </div>
  </nav>


    <% if (organisations.length > 0) { %>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Join Organisation</h5>
              <form
                method="post"
                action="/recruiters/<%=idRecruiter%>/join-organisation"
              >
              <div class="mb-3">
                  <label for="siren" class="form-label">SIREN</label>
                  <select
                    name="siren"
                    id="siren"
                    class="form-select"
                    aria-label="Default select example"
                  >
                    <% organisations.forEach((organisation) => { %>
                    <option value="<%= organisation.SIREN %>">
                      <%= organisation.name %>
                    </option>
                    <% }) %>
                  </select>
                </div>
                </div>
                <button type="submit" class="btn btn-primary">Join</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="alert alert-danger" role="alert">
        No organisation available !
      </div>
    </div>
    <% } %>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"></script>
  </body>
</html>
